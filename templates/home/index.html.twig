{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}
{% block stylesheets %}
<link href="{{asset('asset/css/style.css')}}" rel="stylesheet">  
{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
		</div>
	</div>
</div>
<section>
	<div class="container-fluid">
		<section>
			<div class="col-md-12 banner">
				<h1 class="text-banner">Bienvenue sur mon portofolio</h1>
			</div>
			<div class="row first">
				<div class="col-md-6 col-sm 12 container">
					<h1 class="title">À propos de moi </h1>
					<p> <i class="fas fa-arrow-right"></i> Actuellement en reconversion professionnel dans le  développement web,  je recherche un stage de 4 à 6 mois.

						Dans un premier temps pour  perfectionner mes compétences et par la suite passer le RNCP développeur web. 
						
						Ma motivation et ma soif de connaissance seront à coup sûr, un atout pour réaliser mes projets et apporter une plus value à votre entreprise.
					</p>
				</div>
				<div class="col-md-6">
					<div class="row ">
						<div class="col-md-12 text-center container-round ">
							<img class="picture" src="https://fakeimg.pl/300x300/"
								alt="[ABC Tech posssède 75% de part de marché et XYZ 25%]" />
							<img src="https://fakeimg.pl/300x300/"
								alt="[ABC Tech posssède 75% de part de marché et XYZ 25%]" />
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 text-center">
							<img src="https://fakeimg.pl/604x200/"
								alt="[ABC Tech posssède 75% de part de marché et XYZ 25%]" />
						</div>
					</div>
				</div>
			</div>
	</div>
	</div>
	</div>
</section>
<div class="container-fluid text-center second ">
	<h1 class="title title-card">Mes projets</h1>
	<div class="row d-flex justify-content-center ">
		{% for project in projects %}
		<div class="card" style="width: 18rem;">
			<img class="card-img-top img" src="{{ project.img[0].url }}" alt="Card image cap">
			<div class="card-body">
				<h5 class="card-title">{{ project.name }}</h5>
				<p class="card-text">{% autoescape false %} {{ project.description|striptags|u.truncate(50, ' ...') }} {% endautoescape %}</p>
				<button type="button" class="bubbly-button btn-card" data-toggle="modal" data-target="#modal-{{project.id}}">En
					savoir plus</button>
			</div>
		</div>
		<div class="modal fade" id="modal-{{project.id}}" tabindex="-1" aria-labelledby="modal-{{project.id}}"
			aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					<div class="modal-img">
						{% if project.img[1].url is defined %}
						<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
							<ol class="carousel-indicators">
								<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
								{% for i in 0..project.img|length-2 %}
								<li data-target="#carouselExampleIndicators" data-slide-to="{{i+1}}"></li>
								{% endfor %}
							</ol>
							<div class="carousel-inner">
								<div class="carousel-item active">
									<img class="d-block w-100" src="{{project.img[0].url}}" alt="{{project.name}}">
								</div>
								{% for i in 1..project.img|length-1 %}
								<div class="carousel-item">
									<img class="d-block w-100" src="{{project.img[i].url}}" alt="{{project.name}}">
								</div>
								{% endfor %}
							</div>
							<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
								data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
								data-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="sr-only">Next</span>
							</a>
						</div>
						{% else %}
						<img src="{{ project.img[0].url}}" alt="{{project.name}}" class="d-block w-100">
						{% endif %}
					</div>
					<div class="modal-header">
						<h3 class="modal-title">{{ project.name }}</h3>
					</div>
					<div class="modal-body">
						<p class="modal-text">{% autoescape false %} {{ project.description|striptags }} {% endautoescape %}</p>
					</div>
					<div class="modal-footer">
						<p class="techno">{{ project.techno[0].imgUrl|raw}}</p>
					</div>
					<div class="modal-footer" >
						<a class="link" href="{{project.url}}" target="_blank"><i class="fas fa-link"></i> Lien du site</a>
						<a class="link" href="{{project.repositoryGit}}" target="_blank"><i class="fas fa-link"></i> Lien Github</a>
						<!--<a href="">Maquette</a>-->
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary read-more" data-dismiss="modal">Fermer</button>
					</div>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
	<div class="container-fluid text-center third">
		<h1 class="title title-card">Mes design</h1>
		<div class="row d-flex justify-content-center">
			{% for design in designs %}
			<div class="card" style="width: 18rem;">
				<img class="card-img-top img" src="{{ design.img[0].url }}" alt="Card image cap">
				<div class="card-body">
					<h5 class="card-title">{{ design.name }}</h5>
					<p class="card-text">{% autoescape false %} {{ design.description|striptags|u.truncate(50, ' ...') }} {% endautoescape %}</p>
					<button type="button" class="bubbly-button btn-card" data-toggle="modal"
						data-target="#modal-{{design.id}}">En
						savoir plus</button>
				</div>
			</div>
			<div class="modal fade" id="modal-{{design.id}}" tabindex="-1" aria-labelledby="modal-{{design.id}}"
				aria-hidden="true">
				<div class="modal-dialog" role="document">
					<div class="modal-content">
						<div class="modal-img">
							{% if design.img[1].url is defined %}
							<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
								<ol class="carousel-indicators">
									<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
									{% for i in 0..design.img|length-2 %}
									<li data-target="#carouselExampleIndicators" data-slide-to="{{i+1}}"></li>
									{% endfor %}
								</ol>
								<div class="carousel-inner">
									<div class="carousel-item active">
										<img class="d-block w-100" src="{{design.img[0].url}}" alt="{{design.name}}">
									</div>
									{% for i in 1..design.img|length-1 %}
									<div class="carousel-item">
										<img class="d-block w-100" src="{{design.img[i].url}}" alt="{{design.name}}">
									</div>
									{% endfor %}
								</div>
								<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
									data-slide="prev">
									<span class="carousel-control-prev-icon" aria-hidden="true"></span>
									<span class="sr-only">Previous</span>
								</a>
								<a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
									data-slide="next">
									<span class="carousel-control-next-icon" aria-hidden="true"></span>
									<span class="sr-only">Next</span>
								</a>
							</div>

							{% else %}
							<img src="{{ design.img[0].url}}" alt="{{design.name}}" class="d-block w-100">

							{% endif %}

						</div>
						<div class="modal-header">
							<h5 class="modal-title">{{ design.name }}</h5>
						</div>
						<div class="modal-body">
							<p>{% autoescape false %} {{ design.description|striptags }} {% endautoescape %}</p>
						</div>
						<div class="modal-footer">
							<button type="button" class="btn btn-secondary read-more"
								data-dismiss="modal">Fermer</button>
						</div>
						<div class="modal-footer">
							<a href="{{design.urlAdobe}}" target="_blank">Maquette</a>

						</div>
					</div>
				</div>
			</div>
			{% endfor %}
		</div>
			<div class="container-fluid four">
				{% for message in app.flashes('message') %}
				<div class="alert alert-success" role="alert">
					{{ message }}
				</div>
				{% endfor %}
				<div class="bg-contact100" style="background-image: url('images/bg-01.jpg');">
					<div class="container-contact100">
						<div class="wrap-contact100">
							<div class="contact100-pic js-tilt" data-tilt>
								<img src="https://zupimages.net/up/20/52/jlnd.png" alt="IMG">
							</div>

							{{ form_start(form) }}
							<span class="contact100-form-title">
								Contactez moi
							</span>

							<div class="wrap-input100 validate-input" data-validate="Name is required">
								{{ form_row(form.firstname) }}

								<span class="focus-input100"></span>
								<span class="symbol-input100">
									<i class="fa fa-user" aria-hidden="true"></i>
								</span>
							</div>
							<div class="wrap-input100 validate-input" data-validate="Name is required">
								{{ form_row(form.lastname) }}

								<span class="focus-input100"></span>
								<span class="symbol-input100">
									<i class="fa fa-user" aria-hidden="true"></i>
								</span>
							</div>
							<div class="wrap-input100 validate-input"
								data-validate="Valid email is required: ex@abc.xyz">
								{{ form_row(form.email) }}
								<span class="focus-input100"></span>
								<span class="symbol-input100">
									<i class="fa fa-envelope" aria-hidden="true"></i>
								</span>
							</div>
							<div class="wrap-input100 validate-input" data-validate="Message is required">
								{{ form_row(form.message) }}
								<span class="focus-input100"></span>
							</div>
							<div class="container-contact100-form-btn">
								<button class="bubbly-button">
									Envoyer
								</button>
							</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

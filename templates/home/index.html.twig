						</div>

						{% else %}
						<img src="{{ design.img[0].url}}" alt="{{design.name}}" class="d-block w-100">

						{% endif %}

					</div>
					<div class="modal-header">
						<h5 class="modal-title">{{ design.name }}</h5>
					</div>
					<div class="modal-body">
						<p>{% autoescape false %} {{ design.description|striptags }} {% endautoescape %}</p>
					</div>
					<div class="modal-footer">
						<a href="{{design.urlAdobe}}" target="_blank"><i class="fas fa-link"></i>Lien de la maquette</a>
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary read-more" data-dismiss="modal">Fermer</button>
					</div>
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
	<div class="container-fluid four" id="contact">
		{% for message in app.flashes('message') %}
		<div class="alert alert-success" role="alert">
			{{ message }}
		</div>
		{% endfor %}

		<div class="bg-contact100" style="background-image: url('images/bg-01.jpg');">
			<div class="container-contact100">
				<div class="wrap-contact100">
					<div class="contact100-pic js-tilt" data-tilt>
						<img src="https://zupimages.net/up/21/53/z3fn.png" alt="IMG">
					</div>

					{{ form_start(form) }}
					<span class="contact100-form-title">
						Contactez moi
					</span>

					<div class="wrap-input100 validate-input" data-validate="Name is required">
						{{ form_row(form.firstname) }}

						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Name is required">
						{{ form_row(form.lastname) }}

						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-user" aria-hidden="true"></i>
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
						{{ form_row(form.email) }}
						<span class="focus-input100"></span>
						<span class="symbol-input100">
							<i class="fa fa-envelope" aria-hidden="true"></i>
						</span>
					</div>
					<div class="wrap-input100 validate-input" data-validate="Message is required">
						{{ form_row(form.message) }}
						<span class="focus-input100"></span>
					</div>
					<div class="container-contact100-form-btn">
						<button class="bubbly-button">
							Envoyer
						</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
</div>
</div>


								<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
								{% for i in 0..design.img|length-2 %}
								<li data-target="#carouselExampleIndicators" data-slide-to="{{i+1}}"></li>
								{% endfor %}
							</ol>
							<div class="carousel-inner">
								<div class="carousel-item active">
									<img class="d-block w-100" src="{{design.img[0].url}}" alt="{{design.name}}">
								</div>
								{% for i in 1..design.img|length-1 %}
								<div class="carousel-item">
									<img class="d-block w-100" src="{{design.img[i].url}}" alt="{{design.name}}">
								</div>
								{% endfor %}
							</div>
							<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
								data-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="sr-only">Previous</span>
							</a>
							<a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
